<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Get CRUD</title>
  </head>
  <style>
    table {
      font-family: arial, sans-serif;
      border-collapse: collapse;
      width: 100%;
    }

    td,
    th {
      border: 1px solid black;
      text-align: left;
      padding: 8px;
    }

    tr:nth-child(even) {
      background-color: #dddddd;
    }
    a {
      text-decoration: none;
      color: black;
    }
    .btn-edit {
      height: 25px;
      width: 50px;
      border: none;
      border-radius: 5px;
      background-color: burlywood;
      cursor: pointer;
      margin-right: 7px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }
    .btn-delete {
      height: 25px;
      width: 60px;
      border: none;
      border-radius: 5px;
      background-color: rgba(255, 0, 0, 0.683);
      cursor: pointer;
      display: inline-flex;
      align-items: center;
      justify-content: center;
    }
    .btn-edit:hover {
      opacity: 0.7;
    }
    .btn-delete:hover {
      opacity: 0.7;
    }
  </style>
  <body>
    <table>
      <tr>
        <th>Email</th>
        <th>First name</th>
        <th>Last name</th>
        <th>Address</th>
        <th>Actions</th>
      </tr>

      <% for(let i=0; i < dataTable.length; i++) { %>
      <tr>
        <td><%= dataTable[i].email %></td>
        <td><%= dataTable[i].firstName %></td>
        <td><%= dataTable[i].lastName %></td>
        <td><%= dataTable[i].address %></td>
        <td>
          <a
            href="/edit-crud?id=<%=dataTable[i].id %>"
            class="btn-edit"
            type="button"
            >Edit</a
          >
          <a
            href="/delete-crud?id=<%=dataTable[i].id %>"
            class="btn-delete"
            type="button"
            >Delete</a
          >
        </td>
      </tr>
      <% } %>
    </table>
  </body>
</html>
